@model LadyLuxe.Models.Domain.Category

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}



<div class="container-fluid">


    <div style="text-align:center">
        <div style="font-size:large">
            Add Categories
        </div>
        <div style="font-size:small;color:gray">
          Add new category into the system
        </div>
    </div>
<div class="row">
        <div class="col-md-8">
            <img src="~/Icons/CategoryImagedisplay.png"  class="img-fluid"/>
        </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div hidden class="form-group form-check hide">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DeletedStatus" /> @Html.DisplayNameFor(model => model.DeletedStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>