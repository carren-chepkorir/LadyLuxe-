@model LadyLuxe.Models.Domain.Sub_Category

@{
    ViewData["Title"] = "Create";
}
@if (TempData["success"] != null)
{
    
<div class="alert alert-success">
    <strong>Success!..</strong>@TempData["success"]
</div>}

<h1>Create</h1>

<h4>Sub_Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="GategoryId" hidden value="@ViewBag.CatId" class="form-control" />
               
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div hidden class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deletedstatus" /> @Html.DisplayNameFor(model => model.Deletedstatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<p>
   Sub - Categories
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                Sub-Category
            </th>
            <th>
              Icon
            </th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Subcategories)
        {
            <tr>
                
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Icon
                </td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Create" asp-controller="Sub_Category" asp-route-id="@item.Id">Sub-Categories</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
